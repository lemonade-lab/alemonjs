{
    "name": "alemon-bot",
    "version": "1.0.0",
    "description": "阿柠檬机器人",
    "author": "ningmengchongshui",
    "license": "GPL-2.0",
    "private": true,
    "workspaces": [
        "example",
        "plugins/*"
    ],
    "type": "module",
    "scripts": {
        "app": "ts-node index.ts",
        "login": "ts-node index.ts login",
        "start": "pm2 startOrRestart pm2.json",
        "stop": "pm2 stop pm2.json",
        "delete": "pm2 delete pm2.json",
        "logs": "pm2 logs alemon",
        "monit": "pm2 monit",
        "kill": "pm2 kill",
        "update": "pm2 update",
        "dev": "nodemon --exec ts-node index.ts",
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.ts --fix --ignore-path .gitignore"
    },
    "dependencies": {
        "alemon": "^1.3.6",
        "alemon-redis": "^1.0.0",
        "art-template": "^4.13.2",
        "qq-guild-bot": "^2.9.5",
        "yaml": "^2.3.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^20.3.1",
        "@types/ws": "^8.5.5",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.22",
        "pm2": "^5.3.0",
        "prettier": "^2.8.8",
        "rimraf": "^5.0.1",
        "ts-node": "^10.9.1",
        "typescript": ">=5.0.4 <5.1.0"
    },
    "engines": {
        "node": ">=16.3.0"
    },
    "keywords": [
        "ts-node",
        "typescript",
        "qq-guild-bot",
        "alemon"
    ]
}