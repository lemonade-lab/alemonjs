{
  "name": "alemon-bot",
  "version": "1.0.0",
  "description": "阿柠檬机器人",
  "author": "ningmengchongshui",
  "license": "GPL-2.0",
  "type": "module",
  "private": true,
  "scripts": {
    "app": "ts-node index.ts",
    "login": "ts-node index.ts login",
    "start": "pm2 startOrRestart pm2.json",
    "pull": "git pull && npm install",
    "stop": "pm2 stop pm2.json",
    "delete": "pm2 delete pm2.json",
    "logs": "pm2 logs alemon",
    "monit": "pm2 monit",
    "kill": "pm2 kill",
    "update": "pm2 update",
    "dev": "nodemon --exec ts-node index.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "alemon-qq": "^1.0.3",
    "alemon-redis": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": ">=5.0.4 <5.1.0"
  },
  "workspaces": [
    "example",
    "plugins/*"
  ],
  "engines": {
    "node": ">=16.3.0"
  },
  "keywords": [
    "qq-guild-bot",
    "alemon-qq",
    "alemon-redis",
    "alemon"
  ]
}