{
  "name": "alemon-bot",
  "version": "1.0.0",
  "description": "阿柠檬机器人",
  "author": "ningmengchongshui",
  "license": "GPL-2.0",
  "private": true,
  "workspaces": [
    "example/*",
    "plugins/*"
  ],
  "type": "module",
  "scripts": {
    "app": "ts-node --esm index.ts",
    "login": "ts-node login.ts",
    "start": "pm2 startOrRestart pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "delete": "pm2 delete pm2.config.js",
    "logs": "pm2 logs alemon",
    "monit": "pm2 monit",
    "kill": "pm2 kill",
    "update": "pm2 update",
    "redis": "pm2 start redis.config.js",
    "dev": "nodemon --exec ts-node index.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "alemon": "^1.3.4",
    "art-template": "^4.13.2",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "qq-guild-bot": "^2.9.5",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": ">=5.0.4 <5.1.0"
  },
  "engines": {
    "node": ">=16.3.0"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "qq-guild-bot"
  ]
}