{
  "name": "alemonjs",
  "version": "1.1.1",
  "description": "DOCS https://alemonjs.com/",
  "author": "ningmengchongshui",
  "license": "GPL-2.0",
  "type": "module",
  "scripts": {
    "app": "ts-node alemon.config.ts",
    "build": "npm run tsc && npm run tsc:logs && npm run tsc:run ",
    "tsc": "tsc",
    "tsc:logs": "tsc --module NodeNext --declaration ./logs.ts",
    "tsc:run": "tsc --module NodeNext --declaration ./run.ts",
    "doc": "typedoc --options typedoc.json",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "file-type": "^18.5.0",
    "form-data": "^4.0.0",
    "image-size": "^1.0.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^12.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "public-ip": "^6.0.1",
    "puppeteer": "^20.7.1",
    "qq-guild-bot": "^2.9.5",
    "qrcode": "^1.5.3",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.11",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.7",
    "@types/koa2-cors": "^2.0.5",
    "@types/lodash": "^4.14.186",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.2.4",
    "@types/node-schedule": "^2.1.2",
    "@types/progress": "^2.0.5",
    "@types/qrcode": "^1.5.0",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "alemon-rollup": "^1.0.4",
    "art-template": "^4.13.2",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.2",
    "typescript": ">=5.0.4 <5.1.0"
  },
  "types": "types",
  "main": "lib/index.js",
  "files": [
    "bin",
    "lib",
    "types",
    "run.js",
    "run.d.ts",
    "logs.js",
    "logs.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./types/index.d.ts"
    },
    "./run": {
      "import": "./run.js",
      "types": "./run.d.ts"
    },
    "./logs": {
      "import": "./logs.js",
      "types": "./logs.d.ts"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=16.14.0"
  }
}