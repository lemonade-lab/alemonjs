{
  "name": "alemon-bot",
  "version": "1.0.0",
  "description": "alemon-bot",
  "author": "ningmengchongshui",
  "license": "GPL-2.0",
  "scripts": {
    "app": "npx ts-node index.ts",
    "login": "npx ts-node login.ts",
    "start": "pm2 start pm2.config.js",
    "restart": "pm2 restart pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "delete": "pm2 delete pm2.config.js",
    "logs": "pm2 logs alemon",
    "monit": "pm2 monit",
    "kill": "pm2 kill",
    "update": "pm2 update",
    "redis": "pm2 start redis.config.js",
    "dev": "npx nodemon --exec ts-node index.ts",
    "dev:img": "npx nodemon --exec ts-node src/express/index.ts",
    "format": "npx prettier --write .",
    "lint": "eslint . --ext .js,.ts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "qq-guild-bot": "^2.9.5",
    "alemon": "^1.2.13",
    "pm2": "^5.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "art-template": "^4.13.2",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.11.5",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint": "^8.42.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "qq-guild-bot"
  ]
}
