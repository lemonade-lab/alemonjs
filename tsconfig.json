{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "types",
    "outDir": "lib"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "types"
  ]
}