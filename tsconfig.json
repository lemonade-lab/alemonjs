{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
